Page {
  height: 100%;
  background-color: #c51720;
}

.page-wrap {
  width: 750rpx;
  font-size: 36rpx;
  color: #edd8b0;
  text-align: center;
}

.banner {
  position: relative;
  width: 100%;
}

.banner-img {
  width: 100%;
  height: 100%;
}

/* 按钮 */
.btn-rectangle {
  width: 670rpx;
  height: 94rpx;
  border-radius: 10rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  font-size: 36rpx;
  background: linear-gradient(180deg, rgb(228, 219, 178) 0%, rgba(196, 171, 123, 1) 100%);
  color: #c51720;
  margin: 0 auto;
  text-align: center;
}

.btn-round {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  color: #c51720;
  background: linear-gradient(180deg, rgba(228, 213, 178, 1) 0%, rgba(196, 171, 123, 1) 100%);
  box-shadow: 4px 12px 24px 0px rgba(153, 7, 7, 0.5);
  text-align: center;
  position: relative;
  /* overflow: visible; */
  padding-left: 0;
  padding-right: 0;
  font-size: 48rpx;
  font-weight: 600;
  line-height: 200rpx;
}
