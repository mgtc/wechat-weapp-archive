.home-wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 766rpx;
}

.home-tab {
  width: 100%;
  height: 674rpx;
}

.banner {
  height: 630rpx;
}

.home-tab-left {
  display: flex;
  /* align-items: center; *//* justify-content: center; */
  width: 50%;
  height: 100%;
}

.home-tab-text {
  display: block;
  margin-top: 156rpx;
  margin-left: 54rpx;
  width: 288rpx;
  height: 180rpx;
  font-size: 72rpx;
  font-family: MFYanSong_Noncommercial-Regular;
  font-weight: 400;
  line-height: 90rpx;
}

.home-tab-content {
  width: 642rpx;
  height: 100rpx;
  text-align: left;
  letter-spacing: 2rpx;
}

.start {
  margin: 56rpx auto;
  width: 100%;
  height: auto;
}

.btn-nobg {
  width: 246rpx;
  height: 66rpx;
  border-radius: 33rpx;
  border: 2px solid rgba(237, 216, 176, 1);
  color: #edd8b0;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: 400;
  background-color: transparent;
  margin-bottom: 36rpx;
}

/* 弹出 */

.custom-popup {
  width: 642rpx;
  height: 842rpx;
  background: linear-gradient(143deg, rgba(231, 61, 75, 1) 0%, rgba(192, 25, 32, 1) 100%);
  border-radius: 48rpx;
}

.pop-title {
  margin: 64rpx auto 50rpx;
  width: 192rpx;
  height: 66rpx;
  font-size: 48rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(237, 216, 176, 1);
  line-height: 66rpx;
}

.pop-content1 text {
  float: left;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(237, 216, 176, 1);
}

.pop-content1 {
  display: block;
  width: 550rpx;
  min-height: 480rpx;
  margin: 0 auto 72rpx;
}

.pop-content2 {
  border-top: 2px dotted #c4ab7b;
  display: block;
  width: 570rpx;
  min-height: 440rpx;
  margin: 0 auto 36rpx;
}

.jiangpin {
  border-bottom: 2px dotted #c4ab7b;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(237, 216, 176, 1);
}

.jiangpin .num {
  font-weight: 600;
  color: #f8e61c;
}

.pop-content1, .pop-content2 {
  letter-spacing: 2rpx;
}
