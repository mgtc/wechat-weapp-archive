.component-order {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: left;
  /* text-align: center; */
  width: 100%;
  margin: 10rpx 0;
}

.order-text {
  margin: 20rpx;
  font-weight: bold;
}

.order-content {
  background-color: rgb(220, 220, 220);
  opacity: 0.5;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.order-item-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0;
  justify-content: space-between;
  width: 100%;
}

.order-content-item-text {
  font-size: 30rpx;
  opacity: 0.5;
}

.title {
  margin-left: 30rpx;
}

.content {
  margin-right: 30rpx;
}

.state-box {
  padding: 10rpx;
  font-size: 30rpx;
  border: 2rpx solid rgb(207, 81, 89);
}
