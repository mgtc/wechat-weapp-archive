# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{js,json}]
indent_style = space
indent_size = 2

[*.{py}]
indent_style = tab
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 2

[**.less]
indent_style = space
indent_size = 2

[**.html]
indent_style = space
indent_size = 2

[vcbuild.bat]
end_of_line = crlf
