Page {
  background: #ececec;
  width: 750rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-content: center;
}

.share-wrap {
  margin-top: 200rpx;
  position: relative;
  width: 642rpx;
  height: 1039rpx;
  color: #edd8b0;
  letter-spacing: 2rpx;
}

.banner {
  width: 642rpx;
  height: 1040rpx;
}

.container {
  /* display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center; */
  width: 550rpx;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.share-content {
  width: 550rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.header {
  height: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.header .date {
  float: right;
  text-align: right;
}

.qr-code {
  width: 128rpx;
  height: 128rpx;
}

.book-summary {
  width: 100%;
  height: 400rpx;
  letter-spacing: 6rpx;
}

.book {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 146rpx;
}

.book .book-name {
  color: #FEFCF9;
  font-size: 16rpx;
  font-family:PingFangSC-Light;
  font-weight: 300;
  line-height: 22rpx;
  margin: 0 auto;
}

.book-comment {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 24rpx;
  font-family: PingFangSC-Light;
  font-weight: 300;
  color: rgba(254, 252, 249, 1);
  line-height: 36rpx;
}

.book-comment-content {
  width: 418rpx;
  height: 146rpx;
}

.book-img {
  width: 112rpx;
  height: 144rpx;
}

.footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.footer-left {
  font-size: 24rpx;
  font-family: PingFangSC-Light;
  font-weight: 300;
  color: rgba(254, 252, 249, 1);
  line-height: 34rpx;
}

.footer-left .event-name {
  font-weight: 400;
}

.footer-right {
  width: 180rpx;
  height: 72rpx;
    display: flex;
  justify-content: space-around;
  align-items: center;
}

.footer-right .share {
  margin: 0;
  padding: 0;
  background-color: transparent;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border: 0;
}

.footer-right ._img {
  width: 72rpx;
  height: 72rpx;
}
