/* tag-box */

.tag-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  position: relative;
}

.tags:after {
  content: '';
  position: absolute;
  background: rgb(237, 237, 237);
  left: 0;
  bottom: 0;
  width: 100%;
  height: 3rpx;
  border-radius: 20rpx;
}

.tag-item {
  padding: 10rpx 0;
  flex: 1;
  text-align: center;
  font-size: 35rpx;
}

.tag-item-active {
  color: rgb(207, 81, 89);
  position: relative;
}

.tag-item-active:after {
  content: '';
  position: absolute;
  background: rgb(207, 81, 89);
  left: 10%;
  bottom: 0;
  width: 80%;
  height: 5rpx;
  border-radius: 20rpx;
}


/* order-box */

.order-box {
  background-color: rgb(220, 220, 220);
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  width: 100%;
  height: 1128rpx;
}

.order-item {
  width: 100%;
}
