/* part 4 */

.myOrder {
  position: fixed;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background-color: rgb(207, 81, 89);
  border: 1rpx double rgb(255, 226, 218);
  opacity: 0.7;
  border-radius: 50rpx;
  color: rgb(255, 255, 255);
}

.myOrder-btn {
  width: 70rpx;
  height: 70rpx;
  margin: 10rpx;
  border-radius: 50%;
}


/* 其他 */

.unpick {
  opacity: 0.5;
}


/* 动画 */

.attention {
  animation: glow 800ms ease-out infinite alternate;
}

@keyframes glow {
  0% {
    box-shadow: 0 0 5px rgba(26, 173, 25, .2);
  }
  100% {
    box-shadow: 0 0 20px rgba(26, 173, 25, .6);
  }
}
