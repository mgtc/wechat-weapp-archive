  margin-top: 57rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}


/* 标题 */

.hint-title-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hint-title {
  font-size: 34rpx;
  padding: 0 10rpx;
  position: relative;
}

.hint-title:before {
  content: ' ';
  position: absolute;
  left: -7rpx;
  bottom: 50%;
  height: 3rpx;
  width: 10rpx;
  border-bottom: 1rpx solid #111111;
  color: #111111;
}

.hint-title:after {
  content: ' ';
  position: absolute;
  right: -7rpx;
  bottom: 50%;
  height: 3rpx;
  width: 10rpx;
  border-bottom: 1rpx solid #111111;
  color: #111111;
}

.chart {
  height: 263px;
  background-size: cover;
}

.category-area {
  margin-top: 57rpx;
}

.category {
  height: 162px;
  background-size: cover;
}


